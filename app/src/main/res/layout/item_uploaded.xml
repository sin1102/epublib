<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mode="same_level"
    app:dragEdge="right"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:id="@+id/layout_swipe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/delete_upload_book"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#d2691e"
            android:layout_gravity="center"
            android:text="Delete"
            android:drawableBottom="@drawable/ic_delete"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/edit_upload_book"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#d269"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:drawableBottom="@drawable/ic_edit_white_24dp"
            android:textSize="20dp"
            android:text="Edit"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cart_image"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img" />

<!--            <TextView-->
<!--                android:id="@+id/cart_book_title"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:padding="6dp"-->
<!--                android:text="Book 1"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="20sp"-->
<!--                android:maxLines="1"-->
<!--                android:ellipsize="end"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cart_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Book 1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/cart_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textColor="@color/txtcolor"
                android:text="Author"
                android:textSize="20sp"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

        </LinearLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>